{
  "name": "yhclt",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "author": {
    "name": "Joetoo",
    "github": "https://github.com/Joetoo"
  },
  "license": "ISC",
  "keywords": [
    "pnpm",
    "monorepo"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "scripts": {
    "dev": "pnpm -C play dev",
    "apifox:dev": "pnpm --dir packages/apifox-cli dev",
    "apifox:build": "pnpm --dir packages/apifox-cli build",
    "apifox:build:out": "pnpm --dir packages/apifox-cli build:out",
    "ui:dev": "pnpm --dir packages/ui dev",
    "ui:build": "pnpm --dir packages/ui build",
    "utils:dev": "pnpm --dir packages/utils dev",
    "utils:build": "pnpm --dir packages/utils build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preinstall": "npx only-allow pnpm",
    "commit:comment": "引导设置规范化的提交信息",
    "commit": "git cz",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "__doc__comment": "一键生成utils文档",
    "__test__comment": "vitest测试",
    "test": "vitest test",
    "test:update": "vitest -u",
    "coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "changeset": "changeset",
    "changeset-v": "changeset version",
    "publish": "changeset publish --registry=https://registry.npmjs.com/"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "@yhclt/theme-chalk": "workspace:^",
    "@yhclt/ui": "workspace:^",
    "@yhclt/utils": "workspace:^",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.24.0",
    "@changesets/cli": "^2.27.7",
    "@chromatic-com/storybook": "1.6.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@storybook/addon-essentials": "^8.2.7",
    "@storybook/addon-interactions": "^8.2.7",
    "@storybook/addon-links": "^8.2.7",
    "@storybook/addon-onboarding": "^8.2.7",
    "@storybook/blocks": "^8.2.7",
    "@storybook/test": "^8.2.7",
    "@storybook/vue3": "^8.2.7",
    "@storybook/vue3-vite": "^8.2.7",
    "@types/node": "^20.14.2",
    "@vitejs/plugin-vue": "^5.1.1",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.4",
    "eslint": "^9.8.0",
    "eslint-plugin-format": "^0.1.2",
    "eslint-plugin-storybook": "^0.8.0",
    "lint-staged": "^15.2.7",
    "only-allow": "^1.2.1",
    "sass": "^1.77.8",
    "simple-git-hooks": "^2.11.1",
    "storybook": "^8.2.7",
    "stylelint": "^16.8.1",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-scss": "^6.5.0",
    "typescript": "^5.4.2",
    "unbuild": "^2.0.0",
    "vite": "^5.3.4",
    "vite-plugin-dts": "4.0.0-beta.2",
    "vitepress": "^1.3.1",
    "vitest": "^2.0.5",
    "vue-tsc": "^2.0.24"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix",
    "*.{css,scss,vue}": "stylelint --cache --fix"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
